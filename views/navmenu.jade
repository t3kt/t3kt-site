nav
  ul
    li(class=routeId=='page'&& page && page.key == 'about' ? 'current':'')
      a(href='/pages/about') about
    li(class=routeId=='news'?'current':'')
      a(href='/news') news
    li(class=(routeId == 'projects'|| routeId == 'projectDetail')?'current':'')
      a(href='/projects') projects
