nav#main-nav
  ul
    li(class=routeId=='page'&& page && page.key == 'about' ? 'current': (routeId == 'projectDetail'?'out-of-scope':''))
      a(href='/pages/about') about
    li(class=routeId=='news'?'current': routeId == 'projectDetail'?'out-of-scope':'')
      a(href='/news') news
    li(class=routeId == 'projects'?'current':'')
      a(href='/projects') projects
      if projects
        ul
          each p in projects
            li(class=(routeId=='projectDetail'&&project &&project.key==p.key)?'current':'')
              a(href='/projects/'+p.key)=p.title
    li(class=routeId == 'projectDetail'?'out-of-scope':'')
      a.icon-link.icon-facebook(href='https://www.facebook.com/int3kt', target='_blank') facebook
      a.icon-link.icon-vimeo(href='https://vimeo.com/tekt', target='_blank') vimeo
      a.icon-link.icon-github(href='https://github.com/t3kt', target='_blank') github
      a.icon-link.icon-flickr(href='https://www.flickr.com/photos/t3kt/', target='_blank') flickr
